{#
  Premium Footer Component
  Supports multiple styles: default, minimal, extended
#}

{% set footer_style = theme.settings.footer_style|default('default') %}
{% set footer_bg = theme.settings.footer_bg_color|default('#1f2937') %}
{% set footer_text = theme.settings.footer_text_color|default('#f9fafb') %}

<footer 
  id="site-footer" 
  class="site-footer {{ footer_style }}-footer mt-auto"
  style="background-color: {{ footer_bg }}; color: {{ footer_text }};"
>
  
  {# Main Footer Content #}
  <div class="footer-main py-12 lg:py-16">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
        
        {# Column 1: About Store #}
        <div class="footer-col">
          <div class="footer-logo mb-6">
            {% if store.logo %}
              <img 
                src="{{ store.logo }}" 
                alt="{{ store.name }}" 
                class="h-10 w-auto brightness-0 invert"
                loading="lazy"
              >
            {% else %}
              <h3 class="text-xl font-bold">{{ store.name }}</h3>
            {% endif %}
          </div>
          
          {% if store.description %}
          <p class="text-sm opacity-80 mb-6 leading-relaxed">
            {{ store.description|slice(0, 150) }}{% if store.description|length > 150 %}...{% endif %}
          </p>
          {% endif %}
          
          {# Social Media Links #}
          {% if store.social_media %}
          <div class="footer-social">
            <h4 class="text-sm font-semibold mb-4">{{ trans('footer.follow_us') }}</h4>
            <div class="flex items-center space-x-3 space-x-reverse">
              {% if store.social_media.twitter %}
              <a 
                href="{{ store.social_media.twitter }}" 
                target="_blank" 
                rel="noopener noreferrer"
                class="social-link w-10 h-10 rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 flex items-center justify-center transition-all"
                aria-label="Twitter"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
                </svg>
              </a>
              {% endif %}
              
              {% if store.social_media.facebook %}
              <a 
                href="{{ store.social_media.facebook }}" 
                target="_blank" 
                rel="noopener noreferrer"
                class="social-link w-10 h-10 rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 flex items-center justify-center transition-all"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
                </svg>
              </a>
              {% endif %}
              
              {% if store.social_media.instagram %}
              <a 
                href="{{ store.social_media.instagram }}" 
                target="_blank" 
                rel="noopener noreferrer"
                class="social-link w-10 h-10 rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 flex items-center justify-center transition-all"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z" fill="none" stroke="{{ footer_bg }}" stroke-width="2"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke="{{ footer_bg }}" stroke-width="2"/>
                </svg>
              </a>
              {% endif %}
              
              {% if store.social_media.snapchat %}
              <a 
                href="{{ store.social_media.snapchat }}" 
                target="_blank" 
                rel="noopener noreferrer"
                class="social-link w-10 h-10 rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 flex items-center justify-center transition-all"
                aria-label="Snapchat"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2c2.8 0 5 2.2 5 5v6c0 .6.4 1 1 1s1 .4 1 1-.4 1-1 1h-2c0 1.1-.9 2-2 2h-4c-1.1 0-2-.9-2-2H6c-.6 0-1-.4-1-1s.4-1 1-1 1-.4 1-1V7c0-2.8 2.2-5 5-5z"/>
                </svg>
              </a>
              {% endif %}
              
              {% if store.social_media.youtube %}
              <a 
                href="{{ store.social_media.youtube }}" 
                target="_blank" 
                rel="noopener noreferrer"
                class="social-link w-10 h-10 rounded-full bg-white bg-opacity-10 hover:bg-opacity-20 flex items-center justify-center transition-all"
                aria-label="YouTube"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23 9.71a8.5 8.5 0 00-.91-4.13 2.92 2.92 0 00-1.72-1A78.36 78.36 0 0012 4.27a78.45 78.45 0 00-8.34.3 2.87 2.87 0 00-1.46.74c-.9.83-1 2.25-1.1 3.45a48.29 48.29 0 000 6.48 9.55 9.55 0 00.3 2 3.14 3.14 0 00.71 1.36 2.86 2.86 0 001.49.78 45.18 45.18 0 006.5.33c3.5.05 6.57 0 10.2-.28a2.88 2.88 0 001.53-.78 2.49 2.49 0 00.61-1 10.58 10.58 0 00.52-3.4c.04-.56.04-3.94.04-4.54zM9.74 14.85V8.66l5.92 3.11c-1.66.92-3.85 1.96-5.92 3.08z"/>
                </svg>
              </a>
              {% endif %}
            </div>
          </div>
          {% endif %}
        </div>
        
        {# Column 2: Quick Links #}
        <div class="footer-col">
          <h4 class="text-base font-semibold mb-6">{{ trans('footer.quick_links') }}</h4>
          <ul class="space-y-3">
            <li>
              <a href="{{ link('about') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                {{ trans('common.about') }}
              </a>
            </li>
            <li>
              <a href="{{ link('products') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                {{ trans('common.products') }}
              </a>
            </li>
            {% if store.brands|length > 0 %}
            <li>
              <a href="{{ link('brands') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                {{ trans('common.brands') }}
              </a>
            </li>
            {% endif %}
            {% if store.blog_enabled %}
            <li>
              <a href="{{ link('blog') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                {{ trans('common.blog') }}
              </a>
            </li>
            {% endif %}
            <li>
              <a href="{{ link('contact') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                {{ trans('common.contact') }}
              </a>
            </li>
          </ul>
        </div>
        
        {# Column 3: Customer Service #}
        <div class="footer-col">
          <h4 class="text-base font-semibold mb-6">{{ trans('footer.customer_service') }}</h4>
          <ul class="space-y-3">
            {% if user %}
            <li>
              <a href="{{ link('profile') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                {{ trans('common.account') }}
              </a>
            </li>
            <li>
              <a href="{{ link('orders') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                طلباتي
              </a>
            </li>
            <li>
              <a href="{{ link('wishlist') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                {{ trans('common.wishlist') }}
              </a>
            </li>
            {% endif %}
            <li>
              <a href="{{ link('shipping') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                الشحن والتوصيل
              </a>
            </li>
            <li>
              <a href="{{ link('returns') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                الإرجاع والاستبدال
              </a>
            </li>
            <li>
              <a href="{{ link('privacy') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                سياسة الخصوصية
              </a>
            </li>
            <li>
              <a href="{{ link('terms') }}" class="text-sm opacity-80 hover:opacity-100 hover:text-accent transition-all">
                الشروط والأحكام
              </a>
            </li>
          </ul>
        </div>
        
        {# Column 4: Newsletter #}
        <div class="footer-col">
          <h4 class="text-base font-semibold mb-6">{{ trans('footer.newsletter') }}</h4>
          <p class="text-sm opacity-80 mb-6 leading-relaxed">
            {{ trans('footer.newsletter_text') }}
          </p>
          
          <form class="newsletter-form" id="newsletter-form">
            <div class="flex flex-col space-y-3">
              <input 
                type="email" 
                name="email" 
                placeholder="{{ trans('footer.email_placeholder') }}"
                class="px-4 py-3 rounded-lg bg-white bg-opacity-10 border border-white border-opacity-20 text-white placeholder-white placeholder-opacity-60 focus:outline-none focus:ring-2 focus:ring-accent text-sm"
                required
              >
              <button 
                type="submit"
                class="px-6 py-3 bg-accent hover:bg-accent-dark text-white rounded-lg font-medium transition-all text-sm"
              >
                {{ trans('footer.subscribe') }}
              </button>
            </div>
          </form>
          
          {# Payment Methods #}
          {% if store.payment_methods %}
          <div class="mt-8">
            <h5 class="text-sm font-semibold mb-4">طرق الدفع</h5>
            <div class="flex items-center space-x-2 space-x-reverse flex-wrap gap-2">
              <div class="w-12 h-8 bg-white bg-opacity-10 rounded flex items-center justify-center">
                <span class="text-xs">VISA</span>
              </div>
              <div class="w-12 h-8 bg-white bg-opacity-10 rounded flex items-center justify-center">
                <span class="text-xs">MADA</span>
              </div>
              <div class="w-12 h-8 bg-white bg-opacity-10 rounded flex items-center justify-center">
                <span class="text-xs">MC</span>
              </div>
            </div>
          </div>
          {% endif %}
        </div>
        
      </div>
    </div>
  </div>
  
  {# Footer Bottom #}
  <div class="footer-bottom border-t border-white border-opacity-10 py-6">
    <div class="container">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        
        {# Copyright #}
        <div class="text-sm opacity-80">
          <p>
            &copy; {{ "now"|date("Y") }} {{ store.name }}. {{ trans('footer.all_rights_reserved') }}
          </p>
        </div>
        
        {# Powered by Salla #}
        <div class="text-sm opacity-60">
          <a href="https://salla.sa" target="_blank" rel="noopener noreferrer" class="hover:opacity-100 transition-opacity">
            Powered by Salla
          </a>
        </div>
        
      </div>
    </div>
  </div>
  
</footer>
