{#
  Features/Services Section
  Display store features and benefits
#}

{% set section_title = block.settings.title|default('لماذا نحن؟') %}
{% set section_style = block.settings.style|default('default') %}
{% set features = block.settings.features|default([
  {
    icon: 'truck',
    title: 'شحن سريع ومجاني',
    description: 'توصيل مجاني للطلبات فوق 200 ريال'
  },
  {
    icon: 'shield',
    title: 'دفع آمن',
    description: 'نستخدم أحدث تقنيات الأمان'
  },
  {
    icon: 'refresh',
    title: 'إرجاع سهل',
    description: 'إرجاع مجاني خلال 14 يوم'
  },
  {
    icon: 'support',
    title: 'دعم 24/7',
    description: 'فريق الدعم متاح دائماً لمساعدتك'
  }
]) %}

<section class="features-section py-12 md:py-16 {{ section_style == 'gradient' ? 'bg-gradient-to-b from-gray-50 to-white' : 'bg-gray-50' }}">
  <div class="container">
    
    {% if section_title %}
    <div class="section-header mb-8 md:mb-12 text-center">
      <h2 class="section-title text-2xl md:text-4xl font-bold">
        {{ section_title }}
      </h2>
    </div>
    {% endif %}
    
    <div class="features-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      
      {% for feature in features %}
      <div class="feature-item text-center p-6 bg-white rounded-lg hover:shadow-lg transition-all duration-300 group">
        
        {# Icon #}
        <div class="feature-icon mb-4 flex justify-center">
          <div class="w-16 h-16 rounded-full bg-primary bg-opacity-10 flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all">
            {% if feature.icon == 'truck' %}
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
            </svg>
            {% elseif feature.icon == 'shield' %}
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            {% elseif feature.icon == 'refresh' %}
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            {% elseif feature.icon == 'support' %}
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            {% elseif feature.icon == 'gift' %}
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
            </svg>
            {% elseif feature.icon == 'star' %}
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
            {% else %}
            <svg class="w-8 h-8 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            {% endif %}
          </div>
        </div>
        
        {# Title #}
        <h3 class="feature-title text-lg font-bold mb-2">
          {{ feature.title }}
        </h3>
        
        {# Description #}
        {% if feature.description %}
        <p class="feature-description text-sm text-gray-600">
          {{ feature.description }}
        </p>
        {% endif %}
        
      </div>
      {% endfor %}
      
    </div>
    
  </div>
</section>
