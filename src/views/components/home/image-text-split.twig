{#
  Image Text Split Component
  قسم بصورة ونص جنباً إلى جنب
#}

<section class="image-text-split-section py-16 {{ block.background_color|default('bg-gray-50') }}" data-block-id="{{ block.id }}">
  <div class="container mx-auto px-4">
    <div class="flex flex-col {{ block.image_position == 'right' ? 'lg:flex-row-reverse' : 'lg:flex-row' }} items-center gap-12">
      {# Image Side #}
      <div class="w-full lg:w-1/2">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <img 
            src="{{ block.image }}" 
            alt="{{ block.title }}"
            class="w-full h-auto object-cover"
            loading="lazy"
          >
          {% if block.image_badge %}
          <div class="absolute top-4 {{ block.image_position == 'right' ? 'left-4' : 'right-4' }} bg-primary-600 text-white px-4 py-2 rounded-lg font-bold">
            {{ block.image_badge }}
          </div>
          {% endif %}
        </div>
      </div>

      {# Text Side #}
      <div class="w-full lg:w-1/2">
        {% if block.subtitle %}
        <div class="text-primary-600 font-semibold mb-2 uppercase tracking-wide">
          {{ block.subtitle }}
        </div>
        {% endif %}

        {% if block.title %}
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
          {{ block.title }}
        </h2>
        {% endif %}

        {% if block.description %}
        <div class="text-lg text-gray-700 mb-8 leading-relaxed">
          {{ block.description|raw }}
        </div>
        {% endif %}

        {# Features List #}
        {% if block.features %}
        <ul class="space-y-4 mb-8">
          {% for feature in block.features %}
          <li class="flex items-start">
            <svg class="w-6 h-6 text-primary-600 ml-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700">{{ feature }}</span>
          </li>
          {% endfor %}
        </ul>
        {% endif %}

        {# CTA Buttons #}
        <div class="flex flex-wrap gap-4">
          {% if block.primary_button_text and block.primary_button_link %}
          <a 
            href="{{ block.primary_button_link }}" 
            class="inline-block bg-primary-600 text-white font-bold px-8 py-3 rounded-lg hover:bg-primary-700 transition-colors duration-300"
          >
            {{ block.primary_button_text }}
          </a>
          {% endif %}

          {% if block.secondary_button_text and block.secondary_button_link %}
          <a 
            href="{{ block.secondary_button_link }}" 
            class="inline-block border-2 border-gray-300 text-gray-700 font-bold px-8 py-3 rounded-lg hover:border-primary-600 hover:text-primary-600 transition-colors duration-300"
          >
            {{ block.secondary_button_text }}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
