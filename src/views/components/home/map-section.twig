{#
  Map Section Component
  عرض موقع المتجر على الخريطة
#}

<section class="map-section py-16 bg-white" data-block-id="{{ block.id }}">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row gap-8">
      {# Contact Info #}
      <div class="w-full lg:w-1/3">
        {% if block.title %}
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {{ block.title }}
        </h2>
        {% endif %}

        {% if block.description %}
        <p class="text-gray-700 mb-6 leading-relaxed">
          {{ block.description }}
        </p>
        {% endif %}

        {# Contact Details #}
        <div class="space-y-4">
          {% if block.address %}
          <div class="flex items-start">
            <svg class="w-6 h-6 text-primary-600 ml-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <div>
              <div class="font-semibold text-gray-900 mb-1">{{ trans('contact.address') }}</div>
              <div class="text-gray-700">{{ block.address }}</div>
            </div>
          </div>
          {% endif %}

          {% if block.phone %}
          <div class="flex items-start">
            <svg class="w-6 h-6 text-primary-600 ml-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            <div>
              <div class="font-semibold text-gray-900 mb-1">{{ trans('contact.phone') }}</div>
              <a href="tel:{{ block.phone }}" class="text-primary-600 hover:text-primary-700">{{ block.phone }}</a>
            </div>
          </div>
          {% endif %}

          {% if block.email %}
          <div class="flex items-start">
            <svg class="w-6 h-6 text-primary-600 ml-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            <div>
              <div class="font-semibold text-gray-900 mb-1">{{ trans('contact.email') }}</div>
              <a href="mailto:{{ block.email }}" class="text-primary-600 hover:text-primary-700">{{ block.email }}</a>
            </div>
          </div>
          {% endif %}

          {% if block.working_hours %}
          <div class="flex items-start">
            <svg class="w-6 h-6 text-primary-600 ml-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <div>
              <div class="font-semibold text-gray-900 mb-1">{{ trans('contact.working_hours') }}</div>
              <div class="text-gray-700">{{ block.working_hours }}</div>
            </div>
          </div>
          {% endif %}
        </div>

        {# Get Directions Button #}
        {% if block.latitude and block.longitude %}
        <a 
          href="https://www.google.com/maps/dir/?api=1&destination={{ block.latitude }},{{ block.longitude }}" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block mt-6 bg-primary-600 text-white font-bold px-6 py-3 rounded-lg hover:bg-primary-700 transition-colors duration-300"
        >
          {{ trans('contact.get_directions') }}
        </a>
        {% endif %}
      </div>

      {# Map #}
      <div class="w-full lg:w-2/3">
        <div class="map-container rounded-xl overflow-hidden shadow-lg h-96 lg:h-full">
          {% if block.latitude and block.longitude %}
          {# Google Maps Embed #}
          <iframe 
            src="https://www.google.com/maps?q={{ block.latitude }},{{ block.longitude }}&hl=ar&z=15&output=embed"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
          {% elseif block.map_embed_url %}
          {# Custom Map Embed URL #}
          <iframe 
            src="{{ block.map_embed_url }}"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
          ></iframe>
          {% else %}
          {# Placeholder #}
          <div class="w-full h-full bg-gray-200 flex items-center justify-center">
            <p class="text-gray-500">{{ trans('contact.map_placeholder') }}</p>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
