{#
  Testimonials Component
  عرض آراء وتقييمات العملاء
#}

<section class="testimonials-section py-16 bg-white" data-block-id="{{ block.id }}">
  <div class="container mx-auto px-4">
    {% if block.title %}
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
        {{ block.title }}
      </h2>
      {% if block.subtitle %}
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">{{ block.subtitle }}</p>
      {% endif %}
    </div>
    {% endif %}

    <div class="testimonials-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for testimonial in block.testimonials %}
      <div class="testimonial-card bg-gray-50 rounded-xl p-8 hover:shadow-xl transition-shadow duration-300">
        {# Rating Stars #}
        <div class="flex items-center mb-4">
          {% for i in 1..5 %}
          <svg class="w-5 h-5 {{ i <= testimonial.rating ? 'text-yellow-400' : 'text-gray-300' }}" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          {% endfor %}
        </div>

        {# Testimonial Text #}
        <blockquote class="text-gray-700 mb-6 leading-relaxed">
          "{{ testimonial.text }}"
        </blockquote>

        {# Customer Info #}
        <div class="flex items-center">
          {% if testimonial.image %}
          <img 
            src="{{ testimonial.image }}" 
            alt="{{ testimonial.name }}"
            class="w-12 h-12 rounded-full object-cover"
            loading="lazy"
          >
          {% else %}
          <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center text-white font-bold">
            {{ testimonial.name|slice(0, 1) }}
          </div>
          {% endif %}
          <div class="mr-4">
            <div class="font-semibold text-gray-900">{{ testimonial.name }}</div>
            {% if testimonial.position %}
            <div class="text-sm text-gray-500">{{ testimonial.position }}</div>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
