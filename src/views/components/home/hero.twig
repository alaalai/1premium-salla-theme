{#
  Hero Section Component
  Main banner/slider for homepage
#}

{% set hero_style = block.settings.style|default('slider') %}
{% set hero_height = block.settings.height|default('large') %}
{% set show_overlay = block.settings.show_overlay|default(true) %}

<section 
  class="hero-section {{ hero_style }}-hero {{ hero_height }}-hero relative overflow-hidden"
  data-hero-section
>
  
  {% if hero_style == 'slider' and block.slides|length > 1 %}
  
  {# Slider Hero #}
  <div class="hero-slider swiper" data-hero-slider>
    <div class="swiper-wrapper">
      {% for slide in block.slides %}
      <div class="swiper-slide relative">
        
        {# Background Image #}
        <div class="hero-slide-bg absolute inset-0">
          {% if slide.image %}
          <img 
            src="{{ slide.image }}" 
            alt="{{ slide.title }}"
            class="w-full h-full object-cover"
            loading="{{ loop.first ? 'eager' : 'lazy' }}"
          >
          {% else %}
          <div class="w-full h-full bg-gradient-to-r from-primary to-secondary"></div>
          {% endif %}
          
          {# Overlay #}
          {% if show_overlay %}
          <div class="absolute inset-0 bg-black bg-opacity-40"></div>
          {% endif %}
        </div>
        
        {# Content #}
        <div class="hero-slide-content relative h-full flex items-center">
          <div class="container">
            <div class="max-w-2xl {{ slide.text_align|default('text-right') }}">
              
              {% if slide.subtitle %}
              <p class="hero-subtitle text-white text-sm md:text-base font-medium mb-4 opacity-90 animate-slideUp">
                {{ slide.subtitle }}
              </p>
              {% endif %}
              
              {% if slide.title %}
              <h1 class="hero-title text-white text-3xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight animate-slideUp" style="animation-delay: 0.1s;">
                {{ slide.title }}
              </h1>
              {% endif %}
              
              {% if slide.description %}
              <p class="hero-description text-white text-base md:text-lg mb-8 opacity-90 animate-slideUp" style="animation-delay: 0.2s;">
                {{ slide.description }}
              </p>
              {% endif %}
              
              {% if slide.button_text %}
              <div class="hero-actions animate-slideUp" style="animation-delay: 0.3s;">
                <a 
                  href="{{ slide.button_link|default('#') }}" 
                  class="inline-block px-8 py-4 bg-white text-primary font-bold rounded-lg hover:bg-opacity-90 transition-all transform hover:scale-105 shadow-lg"
                >
                  {{ slide.button_text }}
                </a>
              </div>
              {% endif %}
              
            </div>
          </div>
        </div>
        
      </div>
      {% endfor %}
    </div>
    
    {# Navigation #}
    <div class="hero-slider-navigation">
      <div class="hero-slider-prev absolute top-1/2 right-4 transform -translate-y-1/2 z-10 cursor-pointer">
        <div class="w-12 h-12 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-full flex items-center justify-center transition-all backdrop-blur-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </div>
      </div>
      <div class="hero-slider-next absolute top-1/2 left-4 transform -translate-y-1/2 z-10 cursor-pointer">
        <div class="w-12 h-12 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-full flex items-center justify-center transition-all backdrop-blur-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      </div>
    </div>
    
    {# Pagination #}
    <div class="hero-slider-pagination absolute bottom-6 left-1/2 transform -translate-x-1/2 z-10 flex space-x-2 space-x-reverse"></div>
    
  </div>
  
  {% else %}
  
  {# Single Hero #}
  {% set slide = block.slides|first %}
  <div class="hero-single relative">
    
    {# Background #}
    <div class="hero-bg absolute inset-0">
      {% if slide.image %}
      <img 
        src="{{ slide.image }}" 
        alt="{{ slide.title }}"
        class="w-full h-full object-cover"
        loading="eager"
      >
      {% else %}
      <div class="w-full h-full bg-gradient-to-r from-primary to-secondary"></div>
      {% endif %}
      
      {% if show_overlay %}
      <div class="absolute inset-0 bg-black bg-opacity-40"></div>
      {% endif %}
    </div>
    
    {# Content #}
    <div class="hero-content relative h-full flex items-center py-20 md:py-32">
      <div class="container">
        <div class="max-w-2xl {{ slide.text_align|default('text-right') }}">
          
          {% if slide.subtitle %}
          <p class="hero-subtitle text-white text-sm md:text-base font-medium mb-4 opacity-90">
            {{ slide.subtitle }}
          </p>
          {% endif %}
          
          {% if slide.title %}
          <h1 class="hero-title text-white text-3xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
            {{ slide.title }}
          </h1>
          {% endif %}
          
          {% if slide.description %}
          <p class="hero-description text-white text-base md:text-lg mb-8 opacity-90">
            {{ slide.description }}
          </p>
          {% endif %}
          
          {% if slide.button_text %}
          <div class="hero-actions">
            <a 
              href="{{ slide.button_link|default('#') }}" 
              class="inline-block px-8 py-4 bg-white text-primary font-bold rounded-lg hover:bg-opacity-90 transition-all transform hover:scale-105 shadow-lg"
            >
              {{ slide.button_text }}
            </a>
          </div>
          {% endif %}
          
        </div>
      </div>
    </div>
    
  </div>
  
  {% endif %}
  
</section>

<style>
  .large-hero { min-height: 600px; }
  .medium-hero { min-height: 500px; }
  .small-hero { min-height: 400px; }
  
  @media (max-width: 768px) {
    .large-hero { min-height: 400px; }
    .medium-hero { min-height: 350px; }
    .small-hero { min-height: 300px; }
  }
</style>
