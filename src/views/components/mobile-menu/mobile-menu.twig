{#
  Mobile Menu Component
  Slide-in navigation menu for mobile devices
#}

<div 
  id="mobile-menu" 
  class="mobile-menu fixed top-0 right-0 h-full w-80 max-w-full bg-white shadow-2xl transform translate-x-full transition-transform duration-300 z-drawer"
  data-mobile-menu
  role="dialog"
  aria-label="{{ trans('mobile_menu.menu') }}"
  aria-hidden="true"
>
  
  {# Menu Header #}
  <div class="mobile-menu-header flex items-center justify-between p-6 border-b border-gray-200">
    
    {# User Info or Logo #}
    <div class="flex items-center space-x-3 space-x-reverse">
      {% if user %}
        <div class="w-10 h-10 rounded-full bg-primary text-white flex items-center justify-center font-bold">
          {{ user.name|slice(0, 1)|upper }}
        </div>
        <div>
          <p class="font-medium text-sm">{{ user.name }}</p>
          <p class="text-xs text-gray-500">{{ user.email }}</p>
        </div>
      {% else %}
        <div>
          <p class="font-bold text-lg">{{ store.name }}</p>
        </div>
      {% endif %}
    </div>
    
    {# Close Button #}
    <button 
      type="button"
      class="mobile-menu-close p-2 hover:bg-gray-100 rounded-full transition-colors"
      data-mobile-menu-close
      aria-label="{{ trans('mobile_menu.close_menu') }}"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
    
  </div>
  
  {# Menu Body #}
  <div class="mobile-menu-body overflow-y-auto" style="max-height: calc(100vh - 180px);">
    
    {# User Actions (if not logged in) #}
    {% if not user %}
    <div class="p-6 border-b border-gray-200">
      <div class="flex space-x-3 space-x-reverse">
        <a 
          href="{{ link('login') }}" 
          class="flex-1 px-4 py-2 bg-primary text-white text-center rounded-lg hover:bg-primary-dark transition-colors text-sm font-medium"
        >
          {{ trans('common.login') }}
        </a>
        <a 
          href="{{ link('register') }}" 
          class="flex-1 px-4 py-2 bg-gray-100 text-gray-800 text-center rounded-lg hover:bg-gray-200 transition-colors text-sm font-medium"
        >
          {{ trans('common.register') }}
        </a>
      </div>
    </div>
    {% endif %}
    
    {# Main Navigation #}
    <nav class="mobile-menu-nav py-4">
      <ul class="space-y-1">
        
        {# Home #}
        <li>
          <a 
            href="{{ store.url }}" 
            class="flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
              <span>{{ trans('common.home') }}</span>
            </span>
          </a>
        </li>
        
        {# Categories #}
        {% if store.categories|length > 0 %}
        <li>
          <button 
            type="button"
            class="w-full flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
            data-mobile-menu-toggle="categories"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
              </svg>
              <span>{{ trans('common.categories') }}</span>
            </span>
            <svg class="w-5 h-5 text-gray-400 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          
          {# Categories Submenu #}
          <ul class="hidden bg-gray-50 py-2" data-mobile-submenu="categories">
            {% for category in store.categories %}
            <li>
              <a 
                href="{{ category.url }}" 
                class="block px-12 py-2 text-sm hover:text-primary transition-colors"
              >
                {{ category.name }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}
        
        {# Products #}
        <li>
          <a 
            href="{{ link('products') }}" 
            class="flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
              <span>{{ trans('common.products') }}</span>
            </span>
          </a>
        </li>
        
        {# Brands #}
        {% if store.brands|length > 0 %}
        <li>
          <a 
            href="{{ link('brands') }}" 
            class="flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
              <span>{{ trans('common.brands') }}</span>
            </span>
          </a>
        </li>
        {% endif %}
        
        {# Blog #}
        {% if store.blog_enabled %}
        <li>
          <a 
            href="{{ link('blog') }}" 
            class="flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
              <span>{{ trans('common.blog') }}</span>
            </span>
          </a>
        </li>
        {% endif %}
        
        {# Contact #}
        <li>
          <a 
            href="{{ link('contact') }}" 
            class="flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span>{{ trans('common.contact') }}</span>
            </span>
          </a>
        </li>
        
      </ul>
    </nav>
    
    {# User Account Links #}
    {% if user %}
    <div class="border-t border-gray-200 py-4">
      <ul class="space-y-1">
        <li>
          <a 
            href="{{ link('profile') }}" 
            class="flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <span>{{ trans('common.account') }}</span>
            </span>
          </a>
        </li>
        <li>
          <a 
            href="{{ link('orders') }}" 
            class="flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              <span>طلباتي</span>
            </span>
          </a>
        </li>
        <li>
          <a 
            href="{{ link('wishlist') }}" 
            class="flex items-center justify-between px-6 py-3 hover:bg-gray-50 transition-colors"
          >
            <span class="flex items-center space-x-3 space-x-reverse">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
              <span>{{ trans('common.wishlist') }}</span>
            </span>
          </a>
        </li>
      </ul>
    </div>
    {% endif %}
    
  </div>
  
  {# Menu Footer #}
  <div class="mobile-menu-footer border-t border-gray-200 p-6">
    {% if user %}
    <a 
      href="{{ link('logout') }}" 
      class="flex items-center justify-center space-x-2 space-x-reverse text-danger hover:text-danger-dark transition-colors"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
      </svg>
      <span>{{ trans('common.logout') }}</span>
    </a>
    {% else %}
    <div class="text-center text-sm text-gray-500">
      <p>مرحباً بك في {{ store.name }}</p>
    </div>
    {% endif %}
  </div>
  
</div>

{# Overlay #}
<div 
  id="mobile-menu-overlay" 
  class="mobile-menu-overlay fixed inset-0 bg-black bg-opacity-50 opacity-0 invisible transition-all duration-300 z-drawer"
  data-mobile-menu-overlay
  aria-hidden="true"
></div>
