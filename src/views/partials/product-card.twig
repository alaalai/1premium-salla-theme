{#
  Product Card Partial
  Reusable product card component
#}

{% set card_style = theme.settings.product_card_style|default('modern') %}
{% set show_quick_view = theme.settings.show_product_quick_view|default(true) %}

<div 
  class="product-card {{ card_style }}-card group relative bg-white rounded-lg overflow-hidden transition-all duration-300 hover:shadow-lg"
  data-product-id="{{ product.id }}"
>
  
  {# Product Image #}
  <div class="product-card-image relative overflow-hidden bg-gray-100 aspect-square">
    <a href="{{ product.url }}" class="block">
      {% if product.image %}
      <img 
        src="{{ product.image }}" 
        alt="{{ product.name }}"
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
        loading="lazy"
      >
      {% else %}
      <div class="w-full h-full flex items-center justify-center text-gray-300">
        <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
      {% endif %}
    </a>
    
    {# Badges #}
    <div class="product-badges absolute top-3 right-3 flex flex-col space-y-2">
      {% if product.is_on_sale %}
      <span class="badge badge-sale px-2 py-1 bg-danger text-white text-xs font-bold rounded">
        خصم {{ product.discount_percentage }}%
      </span>
      {% endif %}
      
      {% if product.is_new %}
      <span class="badge badge-new px-2 py-1 bg-success text-white text-xs font-bold rounded">
        جديد
      </span>
      {% endif %}
      
      {% if product.is_out_of_stock %}
      <span class="badge badge-out px-2 py-1 bg-gray-800 text-white text-xs font-bold rounded">
        نفذت الكمية
      </span>
      {% endif %}
    </div>
    
    {# Quick Actions #}
    <div class="product-quick-actions absolute top-3 left-3 flex flex-col space-y-2 opacity-0 group-hover:opacity-100 transition-opacity">
      
      {# Wishlist #}
      {% if user %}
      <button 
        type="button"
        class="quick-action-btn w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-md hover:bg-primary hover:text-white transition-all"
        data-action="wishlist"
        data-product-id="{{ product.id }}"
        aria-label="إضافة للمفضلة"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
        </svg>
      </button>
      {% endif %}
      
      {# Quick View #}
      {% if show_quick_view %}
      <button 
        type="button"
        class="quick-action-btn w-10 h-10 bg-white rounded-full flex items-center justify-center shadow-md hover:bg-primary hover:text-white transition-all"
        data-action="quick-view"
        data-product-id="{{ product.id }}"
        aria-label="{{ trans('common.quick_view') }}"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
      </button>
      {% endif %}
      
    </div>
    
    {# Add to Cart Overlay (on hover) #}
    {% if not product.is_out_of_stock %}
    <div class="product-add-overlay absolute inset-x-0 bottom-0 p-3 bg-gradient-to-t from-black to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
      <button 
        type="button"
        class="btn-add-to-cart w-full py-2 bg-white text-primary font-bold rounded-lg hover:bg-primary hover:text-white transition-all"
        data-action="add-to-cart"
        data-product-id="{{ product.id }}"
      >
        <span class="flex items-center justify-center space-x-2 space-x-reverse">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
          <span>{{ trans('common.add_to_cart') }}</span>
        </span>
      </button>
    </div>
    {% endif %}
  </div>
  
  {# Product Info #}
  <div class="product-card-info p-4">
    
    {# Product Name #}
    <h3 class="product-name text-sm md:text-base font-medium mb-2 line-clamp-2 hover:text-primary transition-colors">
      <a href="{{ product.url }}">{{ product.name }}</a>
    </h3>
    
    {# Rating #}
    {% if product.rating > 0 %}
    <div class="product-rating flex items-center mb-2">
      <div class="flex items-center space-x-1 space-x-reverse text-yellow-400">
        {% for i in 1..5 %}
          {% if i <= product.rating %}
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          {% else %}
          <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          {% endif %}
        {% endfor %}
      </div>
      <span class="text-xs text-gray-500 mr-2">({{ product.reviews_count }})</span>
    </div>
    {% endif %}
    
    {# Price #}
    <div class="product-price flex items-center space-x-2 space-x-reverse">
      {% if product.is_on_sale %}
      <span class="price-sale text-primary font-bold text-lg">
        {{ product.sale_price }} {{ trans('common.currency') }}
      </span>
      <span class="price-original text-gray-400 line-through text-sm">
        {{ product.price }} {{ trans('common.currency') }}
      </span>
      {% else %}
      <span class="price-regular text-gray-900 font-bold text-lg">
        {{ product.price }} {{ trans('common.currency') }}
      </span>
      {% endif %}
    </div>
    
  </div>
  
</div>
