{
  "name": "Premium Salla Theme",
  "version": "1.1.0",
  "description": "A premium professional Salla theme with 24+ home blocks and advanced features",
  "author": "Alaa",
  "license": "MIT",
  "support": {
    "email": "support@example.com",
    "url": "https://example.com/support"
  },
  "previews": {
    "desktop": "https://via.placeholder.com/1920x1080",
    "mobile": "https://via.placeholder.com/375x667"
  },
  "settings": [
    {
      "key": "header_style",
      "type": "select",
      "title": "نمط الهيدر",
      "options": {
        "default": "افتراضي",
        "transparent": "شفاف",
        "sticky": "ثابت",
        "minimal": "بسيط"
      },
      "default": "default"
    },
    {
      "key": "header_bg_color",
      "type": "color",
      "title": "لون خلفية الهيدر",
      "default": "#ffffff"
    },
    {
      "key": "header_text_color",
      "type": "color",
      "title": "لون نص الهيدر",
      "default": "#1f2937"
    },
    {
      "key": "show_top_bar",
      "type": "switch",
      "title": "إظهار الشريط العلوي",
      "default": false
    },
    {
      "key": "top_bar_text",
      "type": "text",
      "title": "نص الشريط العلوي",
      "default": "شحن مجاني للطلبات فوق 200 ريال"
    },
    {
      "key": "show_search_in_header",
      "type": "switch",
      "title": "إظهار البحث في الهيدر",
      "default": true
    },
    {
      "key": "show_cart_in_header",
      "type": "switch",
      "title": "إظهار السلة في الهيدر",
      "default": true
    },
    {
      "key": "show_wishlist_in_header",
      "type": "switch",
      "title": "إظهار المفضلة في الهيدر",
      "default": true
    },
    {
      "key": "show_secondary_nav",
      "type": "switch",
      "title": "إظهار القائمة الثانوية",
      "default": false
    },
    {
      "key": "footer_style",
      "type": "select",
      "title": "نمط الفوتر",
      "options": {
        "default": "افتراضي",
        "minimal": "بسيط",
        "extended": "موسع"
      },
      "default": "default"
    },
    {
      "key": "footer_bg_color",
      "type": "color",
      "title": "لون خلفية الفوتر",
      "default": "#1f2937"
    },
    {
      "key": "footer_text_color",
      "type": "color",
      "title": "لون نص الفوتر",
      "default": "#f9fafb"
    },
    {
      "key": "primary_color",
      "type": "color",
      "title": "اللون الأساسي",
      "default": "#0ea5e9"
    },
    {
      "key": "secondary_color",
      "type": "color",
      "title": "اللون الثانوي",
      "default": "#a855f7"
    },
    {
      "key": "accent_color",
      "type": "color",
      "title": "اللون المميز",
      "default": "#f59e0b"
    },
    {
      "key": "main_font",
      "type": "text",
      "title": "الخط الأساسي",
      "default": "Cairo, sans-serif"
    },
    {
      "key": "heading_font",
      "type": "text",
      "title": "خط العناوين",
      "default": "Cairo, sans-serif"
    },
    {
      "key": "enable_animations",
      "type": "switch",
      "title": "تفعيل الحركات",
      "default": true
    },
    {
      "key": "product_card_style",
      "type": "select",
      "title": "نمط بطاقة المنتج",
      "options": {
        "default": "افتراضي",
        "modern": "حديث",
        "minimal": "بسيط",
        "classic": "كلاسيكي"
      },
      "default": "modern"
    },
    {
      "key": "show_product_quick_view",
      "type": "switch",
      "title": "إظهار العرض السريع للمنتج",
      "default": true
    },
    {
      "key": "products_per_row",
      "type": "select",
      "title": "عدد المنتجات في الصف",
      "options": {
        "2": "2",
        "3": "3",
        "4": "4",
        "5": "5"
      },
      "default": "4"
    },
    {
      "key": "popular_searches",
      "type": "text",
      "title": "عمليات البحث الشائعة (مفصولة بفاصلة)",
      "default": "ساعات,أحذية,حقائب,عطور"
    },
    {
      "key": "enable_social_proof",
      "type": "switch",
      "title": "تفعيل الإثبات الاجتماعي",
      "default": true
    },
    {
      "key": "enable_newsletter_popup",
      "type": "switch",
      "title": "تفعيل نافذة النشرة البريدية",
      "default": true
    }
  ],
